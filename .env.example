# Example environment variables for UMakLEBS
# Change values before deploying

# Flask
SECRET_KEY=change_me
FLASK_ENV=production

# MySQL
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASS=
MYSQL_DB=umak_lebs
MYSQL_PORT=3306

# Email (SMTP) - used for verification and sending slips
EMAIL_USER=youremail@example.com
EMAIL_PASS=yourpassword

# Optional settings
TZ=Asia/Manila
DEBUG=False
# If true, the application will attempt to run `init_db()` and `fill_inventory()` during startup (wsgi.py).
# Set to false to avoid blocking Gunicorn workers; prefer running `python setup_db.py` in an init step instead.
INIT_DB_ON_STARTUP=true
# Run init_db() and fill_inventory() in background threads to avoid blocking worker process.
RUN_INIT_IN_THREAD=true
# Number of DB readiness checks (backoff attempts before trying init_db anyway)
DB_READY_CHECKS=10
# MySQL connection timeout (seconds) used by the connector
MYSQL_CONNECT_TIMEOUT=3
